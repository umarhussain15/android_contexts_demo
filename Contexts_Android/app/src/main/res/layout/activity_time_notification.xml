<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demo.com.contexts.TimeNotification">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No Location!"
        android:id="@+id/tvnxtclass"
        android:textAlignment="center"
        android:textColor="@color/primary_text"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Location"
        android:id="@+id/btnclasslocation"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/tvnxtclass"
        android:layout_alignEnd="@+id/tvnxtclass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notify Me :"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5"
        android:layout_marginRight="5dp"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:id="@+id/tvinterval"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignTop="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="minute(s) before class"
        android:id="@+id/textView4"
        android:paddingLeft="5dp"
        android:textColor="@color/primary_text"
        android:layout_alignTop="@+id/tvinterval"
        android:layout_alignRight="@+id/btnclasslocation"
        android:layout_alignEnd="@+id/btnclasslocation"
        android:layout_above="@+id/btninterval"
        android:layout_toRightOf="@+id/tvinterval"
        android:layout_toEndOf="@+id/tvinterval" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Notifcation Interval"
        android:id="@+id/btninterval"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silent Phone in Class"
        android:id="@+id/silentswitch"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:layout_alignRight="@+id/btninterval"
        android:layout_alignEnd="@+id/btninterval"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next Class Time:"
        android:id="@+id/textView7"
        android:layout_below="@+id/btnclasslocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No Time Set"
        android:id="@+id/tvnxtclassdate"
        android:textColor="@color/primary_text"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignRight="@+id/btnclasslocation"
        android:layout_alignEnd="@+id/btnclasslocation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE CLASS DATE"
        android:id="@+id/btnclassdate"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnclasslocation"
        android:layout_alignEnd="@+id/btnclasslocation"
        android:layout_marginTop="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btnstop"
        android:layout_above="@+id/silentswitch"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
